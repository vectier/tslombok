root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.ts]
# for intellij
ij_typescript_spaces_within_imports = true
ij_typescript_use_double_quotes = false
ij_typescript_use_path_mapping = always

[*.md]
trim_trailing_whitespace = false
